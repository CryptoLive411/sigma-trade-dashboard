# Discord to Telegram Relay Worker Configuration
# Copy this file to .env and fill in your values

# ============================================================================
# REQUIRED: API Configuration
# ============================================================================

# Worker API key (from your Lovable project secrets)
WORKER_API_KEY=your_worker_api_key_here

# Supabase URL (from your Lovable project)
SUPABASE_URL=https://your-project.supabase.co

# ============================================================================
# REQUIRED: Telegram API Credentials (from https://my.telegram.org)
# ============================================================================

TELEGRAM_API_ID=your_telegram_api_id
TELEGRAM_API_HASH=your_telegram_api_hash

# ============================================================================
# OPTIONAL: Configuration
# ============================================================================

# Telegram session file name (default: discord_mirror_session)
TELEGRAM_SESSION_NAME=discord_mirror_session

# How often to refresh channel list in seconds (default: 60)
CHANNEL_REFRESH_INTERVAL=60

# Run browser in headless mode (default: true)
# Set to false for first-time Discord login
HEADLESS=true

# Path to store browser profile for Discord session persistence
BROWSER_PROFILE_PATH=./discord_profile

# ============================================================================
# OPTIONAL: Solana Trading (Jupiter Direct)
# ============================================================================

# Add your Solana wallet private key to enable direct Jupiter trading
# Can be base58 encoded or JSON array format
# When configured, the worker will execute trades directly via Jupiter API
SOLANA_PRIVATE_KEY=your-base58-private-key

# Custom RPC endpoint (optional, defaults to public endpoints)
# SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
